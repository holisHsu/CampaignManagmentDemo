[flake8]
max-line-length = 128

# 忽略特定錯誤
ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503

exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    migrations,
    node_modules,
    .pytest_cache

max-complexity = 10

application-import-names = placements_io,mysite
import-order-style = google
